---
import LinkButton from "./LinkButton.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import PreviewIcon from "./icons/PreviewIcon.astro";

import MongodbIcon from "./icons/MongodbIcon.astro";
import SqlIcon from "./icons/SqlIcon.astro";
import JavaIcon from "./icons/JavaIcon.astro";
import JavascriptIcon from "./icons/JavascriptIcon.astro";
import ExpressIcon from "./icons/ExpressIcon.astro";
import BootstrapIcon from "./icons/BootstrapIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import DockerIcon from "./icons/DockerIcon.astro";
import HtmlIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";

const TAGS = {
  EXPRESS: {
    name: "Express",
    class: "bg-gray-300/40 text-white",
    icon: ExpressIcon,
  },

  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-400/40 text-white",
    icon: JavascriptIcon,
  },

  JAVA: {
    name: "Java",
    class: "bg-gray-500/40 text-white",
    icon: JavaIcon,
  },

  DOCKER: {
    name: "Docker",
    class: "bg-blue-500/40 text-white",
    icon: DockerIcon,
  },

  SQL: {
    name: "SQL",
    class: "bg-blue-400/20 text-white",
    icon: SqlIcon,
  },

  MONGODB: {
    name: "MongoDB",
    class: "bg-green-400/40 text-white",
    icon: MongodbIcon,
  },

  HTML: {
    name: "HTML",
    class: "bg-orange-400/40 text-white",
    icon: HtmlIcon,
  },

  CSS: {
    name: "CSS",
    class: "bg-blue-400/40 text-white",
    icon: CssIcon,
  },

  TAILWIND: {
    name: "TailWind",
    class: "bg-sky-400/40 text-white",
    icon: TailwindIcon,
  },

  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-violet-400/40 text-white",
    icon: BootstrapIcon,
  },
};

const PROJECTS = [
  {
    title: "WASP - Page Incidents Manager",
    description:
      "Web-based incident management system con Node.js y Express, con arquitectura multi-base de datos y control de acceso basado en roles. Permite gestionar, registrar y seguir incidencias informáticas dentro de una empresa o instituto, con comunicación entre usuarios, técnicos y administradores, además de reportes y estadísticas.",
    link: "", // si tienes deploy ponlo aquí (ej: Vercel, Render, etc.)
    github: "https://github.com/inspedralbes/projecte-1dam-24-25-dam1pj2",
    image: "/../public/projects/wasp.webp",
    tags: [
      TAGS.EXPRESS,
      TAGS.BOOTSTRAP,
      TAGS.JAVASCRIPT,
      TAGS.SQL,
      TAGS.MONGODB,
      TAGS.DOCKER,
    ],
  },
  {
    title: "NutriSalut - Page with AI support",
    description:
      "A nutrition website with an integrated AI assistant that provides personalized diet tips and health advice. Includes informational content on nutrition and wellness, with a responsive design and interactive elements.",
    link: "", // si lo despliegas (ej: GitHub Pages, Vercel) pon el enlace aquí
    github: "https://github.com/Kore29/Page-NutriSalut",
    image: "/../public/projects/nutrisalut.webp", // ajusta si tienes screenshot
    tags: [TAGS.BOOTSTRAP, TAGS.JAVASCRIPT],
  },

  {
    title: "Whale",
    description:
      "A social network project built in Java with MySQL. Whale is in its early stages and aims to provide essential features such as user profile management, posting, liking, commenting, hashtags, and a simple friends system. The goal is to create a platform inspired by Reddit and Twitter, with room for future improvements and unique features.",
    link: "", // if you deploy it later, add the link here
    github: "https://github.com/Kore29/Whale", // ajusta si está en otro repo
    image: "/../public/projects/whale.webp", // change if you add a real screenshot
    tags: [TAGS.JAVA, TAGS.SQL],
  },
  {
    title: "Web Dev Notes",
    description:
      "A structured notes page covering the basics of HTML, CSS, and a bit of JavaScript. Designed as a quick reference guide for beginners or anyone refreshing front-end fundamentals.",
    link: "", // si lo tienes desplegado (ej: GitHub Pages, Vercel) ponlo aquí
    github: "https://github.com/your-username/web-dev-notes", // cambia 'your-username'
    image: "/../public/projects/web-dev-notes.webp", // ajusta si tienes screenshot
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col items-start gap-y-6">
        <h3 class="text-2xl font-semibold text-gray-800 dark:text-gray-100/70">
          {title}
        </h3>

        <div class="w-full overflow-hidden rounded-xl shadow-xl transition duration-500 ease-in-out transform hover:-translate-y-1 hover:shadow-2xl">
          <img
            src={image}
            alt={title}
            class="w-full h-64 sm:h-96 object-cover object-top transition duration-500 hover:scale-105"
          />
        </div>

        <ul class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

        <p class="text-gray-700 dark:text-gray-400 leading-relaxed">
          {description}
        </p>

        <footer class="flex items-center gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GithubIcon class="size-4" />
              Code
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <PreviewIcon class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</div>
